<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mypetlikeit.member.mapper.MemberMapper">

    <select id="getMemberList" resultType="Member">
        select * from TB_MEMBER;
    </select>

    <insert id="memberSave">
        INSERT into TB_MEMBER (
            MEMBER_LOGINID, MEMBER_PW, MEMBER_NICKNAME,
            MEMBER_EMAIL, MEMBER_PET_YN, MEMBER_PET_NAME, 
            MEMBER_PET_CATEGORY, MEMBER_WANT_PET, MEMBER_CREATE)
        values (
        #{loginId}, #{password}, #{nickname},
        #{email}, #{petYN}, #{petName},
        #{petCategory}, #{wantPet}, now()
        );
    </insert>

    <select id="memberLoginId" resultType="Member">
        select * from TB_MEMBER 
            where MEMBER_LOGINID = #{id}
        ;
    </select>

    <select id="memberNickname" resultType="Member">
        select * from TB_MEMBER 
            where MEMBER_NICKNAME = #{nickname}
        ;
    </select>

</mapper>